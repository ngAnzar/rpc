{
    "$schema": "../src/schema/definition.schema.json",
    "module": "some-package-name/api/valami",
    "entities": {
        "Address": {
            "type": {
                "type": "string"
            },
            "addrField": {
                "type": "string"
            }
        },
        "Event": {
            "type": {
                "type": "string"
            },
            "eventField": {
                "type": "string"
            }
        },
        "User": {
            "firstName": {
                "type": "string"
            },
            "address": {
                "type": {
                    "$ref": "#/entities/Address"
                }
            },
            "valami": {
                "type": {
                    "mapOf": {
                        "$ref": "#/entities/Address"
                    }
                }
            },
            "tuple": {
                "type": [
                    "number",
                    {
                        "$ref": "#/entities/Address"
                    }
                ]
            },
            "picture": {
                "type": {
                    "$ref": "./file.json#/entities/File"
                }
            },
            "node": {
                "type": {
                    "polymorphic": {
                        "identity": "type",
                        "mapping": [
                            {
                                "id": "event",
                                "$ref": "#/entities/Event"
                            },
                            {
                                "id": "address",
                                "$ref": "#/entities/Address"
                            }
                        ]
                    }
                }
            },
            "nodeList": {
                "type": {
                    "listOf": {
                        "$ref": "#/entities/User/node/type"
                    }
                }
            },
            "created_date": {
                "type": "date"
            },
            "created_time": {
                "type": "datetime"
            }
        },
        "File": {
            "szopatas": {
                "type": "boolean"
            }
        },
        "UserListRes": {
            "items": {
                "type": {
                    "listOf": {
                        "$ref": "#/entities/User"
                    }
                }
            }
        }
    },
    "methods": {
        "UserBackend.list": {
            "params": [
                {
                    "name": "filter",
                    "summary": "Short description...",
                    "description": "Long description...",
                    "type": {
                        "$ref": "#/entities/User"
                    }
                }
            ],
            "returns": {
                "summary": "nothing",
                "type": {
                    "$ref": "#/entities/UserListRes"
                }
            },
            "throws": [
                {
                    "code": 400,
                    "message": "string",
                    "data": {
                        "$ref": ""
                    }
                }
            ]
        }
    }
}
