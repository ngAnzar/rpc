{
    "$schema": "../definition.schema.json",
    "module": "some-package-name/api/valami",
    "entities": {
        "Address": {
            "fields": {
                "type": {
                    "type": "string"
                },
                "addrField": {
                    "type": "string"
                }
            }
        },
        "Event": {
            "fields": {
                "type": {
                    "type": "string"
                },
                "eventField": {
                    "type": "string"
                }
            }
        },
        "User": {
            "fields": {
                "firstName": {
                    "type": "string"
                },
                "address": {
                    "type": {
                        "$ref": "#/entities/Address"
                    }
                },
                "valami": {
                    "type": {
                        "mapOf": {
                            "$ref": "#/entities/Address"
                        }
                    }
                },
                "tuple": {
                    "type": [
                        "number",
                        {
                            "$ref": "#/entities/Address"
                        }
                    ]
                },
                "picture": {
                    "type": {
                        "$ref": "./file.json#/entities/File"
                    }
                },
                "node": {
                    "type": {
                        "polymorph": {
                            "identity": "type",
                            "mapping": [
                                {
                                    "id": "event",
                                    "$ref": "#/entities/Event"
                                },
                                {
                                    "id": "address",
                                    "$ref": "#/entities/Address"
                                }
                            ]
                        }
                    }
                },
                "nodeList": {
                    "type": {
                        "listOf": {
                            "$ref": "#/entities/User/fields/node/type"
                        }
                    }
                },
                "created_date": {
                    "type": "date"
                },
                "created_time": {
                    "type": "datetime"
                }
            }
        },
        "File": {
            "fields": {
                "szopatas": {
                    "type": "boolean"
                },
                "poly": {
                    "type": {
                        "$ref": "#/entities/PolyBase"
                    }
                }
            }
        },
        "UserListRes": {
            "fields": {
                "items": {
                    "type": {
                        "listOf": {
                            "$ref": "#/entities/User"
                        }
                    }
                }
            }
        },
        "PolyBase": {
            "polymorph": {
                "identity": "variant",
                "mapping": [
                    {
                        "id": "pc1",
                        "$ref": "#/entities/PolyChild1"
                    },
                    {
                        "id": "pc2",
                        "$ref": "#/entities/PolyChild2"
                    }
                ]
            },
            "fields": {
                "variant": {
                    "type": "string"
                }
            }
        },
        "PolyChild1": {
            "fields": {
                "variant": {
                    "type": "string"
                }
            }
        },
        "PolyChild2": {
            "fields": {
                "variant": {
                    "type": "string"
                },
                "xyz_field": {
                    "type": "any"
                }
            }
        }
    },
    "methods": {
        "UserBackend.list": {
            "params": {
                "filter": {
                    "summary": "Short description...",
                    "description": "Long description...",
                    "type": {
                        "$ref": "#/entities/User"
                    }
                }
            },
            "returns": {
                "summary": "nothing",
                "type": {
                    "$ref": "#/entities/UserListRes"
                }
            },
            "throws": [
                {
                    "code": 400,
                    "message": "string",
                    "data": {
                        "$ref": ""
                    }
                }
            ]
        },
        "UserBackend.get": {
            "params": {
                "id": {
                    "summary": "Short description...",
                    "description": "Long description...",
                    "type": "number"
                }
            },
            "returns": {
                "summary": "nothing",
                "type": {
                    "$ref": "#/entities/User"
                }
            },
            "throws": [
                {
                    "code": 400,
                    "message": "string",
                    "data": {
                        "$ref": ""
                    }
                }
            ]
        },
        "PolyBackend.get": {
            "params": {},
            "returns": {
                "type": {
                    "$ref": "#/entities/PolyBase"
                }
            }
        }
    }
}
